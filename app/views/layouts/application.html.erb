<!DOCTYPE html>
<html>
  <head>
    <title>Catalogo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  

  </head>

  <body>
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><% alert %></p>
  <% end %>
  
  <p class="navbar-text pull-right">
  <% if user_signed_in?%>
    Sesion iniciada como <strong><%= current_user.email %></strong>
    <%= link_to 'Editar perfil', edit_user_registration_path, :class => 'badge badge-primary' %> 
    <%= link_to 'cerrar sesion', destroy_user_session_path, method: :delete, :class => 'badge badge-primary' %>
  <% else %>
    <%= link_to "Registrarse", new_user_registration_path, :class => 'badge badge-primary' %> 
    <%= link_to "Iniciar sesion", new_user_session_path, :class => 'badge badge-primary' %>
  <% end %>
  </p>

  <div class="row">
    <div class="col-sm-2">
      <div> <%= link_to 'categorias', '/categories'%>  </div>
      <div> <%= link_to 'productos', '/products'%>  </div>
    </div>
    <div class="col-sm-10"><%= yield %></div>
  </div>
  </main>
  </body>
</html>
